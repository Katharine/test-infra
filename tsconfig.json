{
  "compilerOptions": {
    "lib": ["dom", "es6", "ScriptHost", "es2015.core", "dom.iterable"],
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  // Bazel doesn't need these, but it prevents other tooling (e.g. VS Code)
  // from being confused.
  "exclude": [
    "bazel-bin",
    "bazel-out",
    "bazel-test-infra",
    "node_modules"
  ]
}
